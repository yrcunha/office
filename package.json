{
  "name": "office",
  "version": "1.0.0",
  "description": "",
  "author": {
    "name": "Yuri Guimar√£es Rodrigues",
    "email": "yrcunha@gmail.com",
    "url": ""
  },
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrate:up && next dev",
    "test": "npm run services:up && concurrently --n next,jest --hide next --k --success command-jest \"next dev\" \"jest --runInBand\" --verbose",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f __infrastructure__/provisioning/development/docker-compose.yaml up -d",
    "services:stop": "docker compose -f __infrastructure__/provisioning/development/docker-compose.yaml stop",
    "services:down": "docker compose -f __infrastructure__/provisioning/development/docker-compose.yaml down",
    "services:wait:database": "node __infrastructure__/provisioning/development/wait-for-postgres.mjs",
    "migrates:create": "node-pg-migrate -m src/services/datasource/migrations create",
    "migrates:up": "node-pg-migrate -m src/services/datasource/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "commit": "cz",
    "prepare": "husky"
  },
  "engines": {
    "node": "20.x.x"
  },
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv-expand": "12.0.1",
    "next": "15.0.3",
    "pg": "8.13.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-conventional": "19.6.0",
    "@types/async-retry": "1.4.9",
    "@types/jest": "29.5.14",
    "@types/node": "22.10.1",
    "@types/pg": "8.11.10",
    "@types/react": "18.3.12",
    "commitizen": "4.3.1",
    "concurrently": "9.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "9.16.0",
    "eslint-config-next": "15.0.3",
    "eslint-config-prettier": "9.1.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "node-pg-migrate": "7.8.0",
    "prettier": "3.4.1",
    "ts-jest": "29.2.5",
    "typescript": "5.7.2"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "rootDir": ".",
    "testTimeout": 60000,
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/?(*.)+(spec|test).[tj]s?(x)"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
